<% include partical/header.ejs %>
<div class="row page-content">
    <div class="col-md-8 col-md-offset-2">

        <form method="post" action="/update-profile/<%= user._id %>"  enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-12">
                <div class="cover profile">
                    <div class="wrapper">
                        <div class="image">
                            <img src="img/Cover/profile-cover.jpg" class="show-in-modal" alt="people">
                        </div>
                        <input type="file" id="myCover" name="myAvatar" style="display:none;" >
                        <button type="button" class="btn btn-success" style="position: absolute; bottom: 10px; right: 20px;" onclick="document.getElementById('myCover').click();">Change
                        </button>
                    </div>
                    <div class="cover-info">
                        <div class="avatar">
                            <img src="<%= user.local.image %>" alt="people">
                            <input type="file" id="myAvatar" name="myAvatar" style="display:none;"/>
                            <button type="button" class="btn btn-success" style="position: absolute; bottom: 28px; right: 16px;" onclick="document.getElementById('myAvatar').click();">Change
                            </button>

                        </div>
                        <div class="name"><a href="#"><%= user_other.local.name %></a></div>
                        <ul class="cover-nav">
                            <li class="active"><a href="/profile/<%= user_other._id %>"><i class="fa fa-fw fa-bars"></i>
                                    Timeline</a></li>
                            <li><a href="/about/<%= user_other._id %>"><i class="fa fa-fw fa-user"></i> About</a></li>
                            <li><a href="/friends/<%= user_other._id %>"><i class="fa fa-fw fa-users"></i> Friends</a>
                            </li>
                            <li><a href="/photos/<%= user_other._id %>"><i class="fa fa-fw fa-image"></i> Photos</a>
                            </li>
                            <li><button type="submit" title="save"><i class="fa fa-floppy-o"
                                                                                 aria-hidden="true"></i>&nbsp;Save</button></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">

            <div class="col-md-12">
                <div class="widget">
                    <div class="widget-header">
                        <h3 class="widget-caption">About</h3>
                    </div>
                    <div class="widget-body bordered-top bordered-sky">
                        <ul class="list-unstyled profile-about margin-none">
                            <li class="padding-v-5">
                                <div class="row">
                                    <div class="col-sm-4"><span class="text-muted">Date of Birth</span></div>
                                    <div class="col-sm-8"><input type="date" class="form-control" name="birthday" value="<%= user.local.birthday %>" placeholder="Date"></div>
                                </div>
                            </li>
                            <li class="padding-v-5">
                                <div class="row">
                                    <div class="col-sm-4"><span class="text-muted">Job</span></div>
                                    <div class="col-sm-8"><input type="text" class="form-control" value="<%= user.local.job %>" name="job"></div>
                                </div>
                            </li>
                            <li class="padding-v-5">
                                <div class="row">
                                    <div class="col-sm-4"><span class="text-muted">Gender</span></div>
                                    <div class="col-sm-8"><select class="form-control" name="gender" value="<%= user.local.gender %>" >
                                            <option value="male">Male</option>
                                            <option value="female">Female</option>
                                        </select>
                                    </div>
                                </div>
                            </li>
                            <li class="padding-v-5">
                                <div class="row">
                                    <div class="col-sm-4"><span class="text-muted">Lives in</span></div>
                                    <div class="col-sm-8"><input type="text" class="form-control" name="hometown" value="<%= user.local.hometown %>"></div>
                                </div>
                            </li>
                            <li class="padding-v-5">
                                <div class="row">
                                    <div class="col-sm-4"><span class="text-muted">Education</span></div>
                                    <div class="col-sm-8"><input type="text" class="form-control" name="education" value="<%= user.local.education %>"></div>
                                </div>
                            </li>
                            <li class="padding-v-5">
                                <div class="row">
                                    <div class="col-sm-4"><span class="text-muted">Fullname</span></div>
                                    <div class="col-sm-8"><input type="text" class="form-control" name="fullname" value="<%= user.local.name %>"></div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div><!-- end timeline posts-->
        </form>

    </div>
</div>
</div>
<% include partical/list_friend.ejs %>
<% include partical/footer.ejs %>
