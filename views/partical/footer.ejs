<div class="modal fade" tabindex="-1" role="dialog" id="message_modal" aria-labelledby="gridSystemModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="gridSystemModalLabel">More Friend</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <ul id="content_addfriend"></ul>
                </div>
            </div>
            <div class="modal-footer">

            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="modal fade" tabindex="-1" role="dialog" id="chat_modal" aria-labelledby="gridSystemModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="gridSystemModalLabel">All message</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <a onclick="javascript:ReadAllMessage()" style="cursor: pointer; padding: 15px;">Read all message</a>
                    <ul id="content_allmessage" style="padding-left: 0px;">
                        <% if(user.message.length>0){ for (var i=0; i< user.message.length; i++){%>
                    <li style="width: 100%; height: 65px; margin-bottom: 10px;"><a href="/chat?conversation=<%= user.message[i].id %>"  onclick="ReadOneChat('<%= user.message[i].id %>')"><div class="col-sm-2"><img src="<%= user.message[i].image %>" width="65" height="65"></div><div class="col-sm-4"><%= user.message[i].name %></div><div class="col-sm-6"><%= user.message[i].content %></div></a></li>
                    <% } } %>
                    </ul>
                </div>
            </div>
            <div class="modal-footer">

            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


<div class="modal fade" tabindex="-1" role="dialog" id="notify_modal" aria-labelledby="gridSystemModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="gridSystemModalLabel">All notifacation</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <a onclick="javascript:ReadAllNotification()" style="cursor: pointer; padding: 15px;">Read all notifacation</a>
                    <ul id="content_notifycation" style="padding-left: 0px;">
                        <% if(user.notify.length>0){ user.notify.forEach(function (noti) { %>
                        <li style="width: 100%; height: 65px; margin-bottom: 10px;"><a href="/detail-status/<%= noti.id_status %>" onclick="ReadOneNotify('<%= noti.id_status %>')"><div class="col-sm-2"><img src="<%= noti.image %>" width="65" height="65"></div><div class="col-sm-4"><%= noti.name %></div><div class="col-sm-4"><%= noti.action %>:<%= noti.title %></div><div class="col-sm-2"><%= noti.date.toLocaleTimeString() + ' ' + noti.date.getDate() + '-' + noti.date.getMonth() + '-' + noti.date.getFullYear() %></div></a></li>
                        <% }); }  %>
                    </ul>
                </div>
            </div>
            <div class="modal-footer">

            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


