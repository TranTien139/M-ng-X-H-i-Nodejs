<% include partical/header.ejs %>
<!-- Begin page content -->
<div class="container page-content ">
    <div class="row">

        <div class="col-md-3">
            <div class="profile-nav">
                <div class="widget">
                    <div class="widget-body">

                        <div class="user-heading round">
                            <a href="/profile/<%= user._id %>">
                                <img src="<%= user.local.image %>" alt="">
                            </a>
                            <h1><%= user.local.name %></h1>
                            <p><%= user.local.email %></p>
                        </div>

                        <ul class="nav nav-pills nav-stacked">
                            <li class="active"><a href=""> <i
                                            class="fa fa-user"></i> News feed</a></li>
                            <li>
                                <a href="">
                                    <i class="fa fa-envelope"></i> Messages
                                    <span class="label label-info pull-right r-activity">9</span>
                                </a>
                            </li>
                            <li><a href=""> <i class="fa fa-calendar"></i>
                                    Events</a></li>
                            <li><a href="/photos/<%= user._id %>"> <i class="fa fa-image"></i> Photos</a>
                            </li>
                            <li><a href=""> <i class="fa fa-share"></i> Browse</a>
                            </li>
                            <li><a href=""> <i class="fa fa-floppy-o"></i>
                                    Saved</a></li>
                        </ul>
                    </div>
                </div>

                <div class="widget">
                    <div class="widget-body">
                        <ul class="nav nav-pills nav-stacked">
                            <li><a href=""> <i class="fa fa-globe"></i> Pages</a>
                            </li>
                            <li><a href=""> <i class="fa fa-gamepad"></i>
                                    Games</a></li>
                            <li><a href=""> <i class="fa fa-puzzle-piece"></i>
                                    Ads</a></li>
                            <li><a href=""> <i class="fa fa-home"></i>
                                    Markerplace</a></li>
                            <li><a href="/create-group"> <i class="fa fa-users"></i> Create Group</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div><!-- end left links -->

        <!-- center posts -->
        <div class="col-md-6">
            <div class="row" ng-app="AppShowHide" ng-controller="ShowHideController">
                <!-- post state form -->
                <div class="box profile-info n-border-top">
                    <form action="/add-status" method="POST" enctype="multipart/form-data">
                                    <textarea class="form-control input-lg p-text-area" rows="2"
                                              placeholder="Whats in your mind today?" name="content_status" required></textarea>
                        <ul id="results_upload" class="list-inline"></ul>
                        <div class="box-footer box-form">
                            <button type="submit" class="btn btn-warning pull-right">Post</button>
                            <ul class="nav nav-pills">
                                <li><a style="cursor: pointer"
                                       onclick="document.getElementById('addImageStatus').click();"><i
                                                class="fa fa-camera"></i></a></li>
                                <input type="file" style="display: none" id="addImageStatus" name="addImageStatus">
                            </ul>
                        </div>
                    </form>
                </div>
                <% if(newfeed.length > 0){ for(var i = 0;i < newfeed.length; i++){ %>
                <!--   posts -->
                <div class="box box-widget">
                    <div class="box-header with-border">
                        <div class="user-block">
                            <img class="img-circle" src="<%= newfeed[i].user.image %>" alt="User Image">
                            <span class="username"><a
                                        href="/profile/<%= newfeed[i].userId %>"><%= newfeed[i].user.name %></a></span>
                            <span class="description"><%= newfeed[i].date.toLocaleTimeString() + ' ' + newfeed[i].date.getDate() + '-' + newfeed[i].date.getMonth() + '-' + newfeed[i].date.getFullYear() %></span>
                        </div>
                    </div>

                    <div class="box-body" style="display: block;">
                        <p><%= newfeed[i].content %>
                        </p>
                        <% if(typeof newfeed[i].image != 'undefined' && newfeed[i].image.length > 0){ for(var k = 0; k < newfeed[i].image.length; k++){ %>
                        <img src="/uploads/status/<%= newfeed[i].image[k] %>" style="width: 100%; height: 300px;"
                             class="img-responsive show-in-modal" alt="photo">
                        <div class="col-sm-12" style="padding-top: 10px;"></div>
                        <% }} %>

                        <!--<button type="button" class="btn btn-default btn-xs"><i class="fa fa-share"></i>-->
                        <!--Share-->
                        <!--</button>-->

                        <% if(newfeed[i].like.indexOf(user._id.toString()) === -1){ %>
                        <button type="button" class="btn btn-success btn-xs like-Unlike" data-id="<%= newfeed[i]._id %>" action="like" ><i class="fa fa-thumbs-o-up">Like</i>
                        </button>
                        <% }else { %>
                        <button type="button" class="btn btn-success btn-xs like-Unlike" data-id="<%= newfeed[i]._id %>" action="unlike" ><i class="fa fa-thumbs-o-down">UnLike</i>
                        </button>
                        <% } %>

                        <span class="pull-right text-muted"><span class="count-like"><%= newfeed[i].like.length %></span>
                            likes - <span class="count-comment"><%= newfeed[i].comment.length %></span> comments</span>
                    </div>
                    <%if( newfeed[i].comment.length > 0){ %>
                    <div class="box-footer box-comments" style="display: block;">
                        <% for(var k = 0 ; k < newfeed[i].comment.length ; k++){ %>
                        <div class="box-comment">
                            <a href="/profile/<%= newfeed[i].comment[k].id %>">
                                <img class="img-circle img-sm" src="<%= newfeed[i].comment[k].image %>"
                                     alt="User Image">
                                <div class="comment-text">
                          <span class="username">
                          <%= newfeed[i].comment[k].name %>
                              <span class="text-muted pull-right"><%= newfeed[i].comment[k].date.toLocaleTimeString() + ' ' + newfeed[i].comment[k].date.getDate() + '-' + newfeed[i].comment[k].date.getMonth() + '-' + newfeed[i].comment[k].date.getFullYear() %></span>
                          </span>
                            </a>
                            <%= newfeed[i].comment[k].content %>
                        </div>
                    </div>
                    <% } %>
                </div>
                <% } %>
                <div class="box-footer" style="display: block;">
                    <form action="/post-comment/<%= newfeed[i]._id %>" method="post">
                        <img class="img-responsive img-circle img-sm"
                             src="<%= user.local.image %>" alt="Alt Text">
                        <div class="img-push">
                            <input type="text" name="content_comment" class="form-control input-sm"
                                   placeholder="Press enter to post comment" required>
                        </div>
                    </form>
                </div>
            </div><!--  end posts-->
            <% }} %>

        </div>
    </div>

    <!-- right posts -->
    <div class="col-md-3">
        <!-- Friends activity -->
        <div class="widget">
            <div class="widget-header">
                <h3 class="widget-caption">Friends activity</h3>
            </div>
            <div class="widget-body bordered-top bordered-sky">
                <div class="card">
                    <div class="content">
                        <ul class="list-unstyled team-members">

                            <li>
                                <div class="row">
                                    <div class="col-xs-3">
                                        <div class="avatar">
                                            <img src="./Day-Dayhome_files/woman-2.jpg" alt="img"
                                                 class="img-circle img-no-padding img-responsive">
                                        </div>
                                    </div>
                                    <div class="col-xs-9">
                                        <b><a href="http://demos.bootdey.com/dayday/home.html#">Hillary Markston</a></b>
                                        shared a
                                        <b><a href="http://demos.bootdey.com/dayday/home.html#">publication</a></b>.
                                        <span class="timeago">5 min ago</span>
                                    </div>
                                </div>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>
        </div><!-- End Friends activity -->

        <!-- People You May Know -->
        <div class="widget">
            <div class="widget-header">
                <h3 class="widget-caption">People You May Know</h3>
            </div>
            <div class="widget-body bordered-top bordered-sky">
                <div class="card">
                    <div class="content">
                        <ul class="list-unstyled team-members">
                            <% if(random.length > 0){ random.forEach(function (randoms) { %>
                            <li>
                                <a href="/profile/<%= randoms._id %>">
                                <div class="row">
                                    <div class="col-xs-3">
                                        <div class="avatar">
                                            <img src="<%= randoms.local.image %>" alt="Circle Image"
                                                 class="img-circle img-no-padding img-responsive">
                                        </div>
                                    </div>
                                    <div class="col-xs-6">
                                       <%= randoms.local.name %>
                                    </div>

                                    <div class="col-xs-3 text-right">
                                        <btn class="btn btn-sm btn-azure btn-icon"><i class="fa fa-user-plus"></i>
                                        </btn>
                                    </div>
                                </div>
                                </a>
                            </li>
                            <% }) } %>
                        </ul>
                    </div>
                </div>
            </div>
        </div><!-- End people yout may know -->
    </div><!-- end right posts -->
</div>
</div>

<input type="hidden" id="id_send" name="id_send" value="<%= user._id %>">

<% include partical/list_friend.ejs %>
<% include partical/footer.ejs %>


