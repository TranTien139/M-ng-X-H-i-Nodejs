<% include partical/header.ejs %>
<div class="row page-content">
    <div class="col-md-8 col-md-offset-2">
        <div class="row">
            <div class="col-md-12">
                <div class="cover profile">
                    <div class="wrapper">
                        <div class="image">
                            <img src="<%= info.cover %>" class="show-in-modal" id="myCover_preview" alt="people">
                        </div>
                        <% if(check.length === 0){%>
                        <button type="button" class="btn btn-success join-group"
                                style="position: absolute; bottom: 10px; right: 20px;"
                                id_group="<%= info._id %>" action="join">Join group
                        </button>
                        <%}else{%>
                        <button type="button" class="btn btn-success join-group"
                                style="position: absolute; bottom: 10px; right: 20px;"
                                id_group="<%= info._id %>" action="unjoin">UnJoin group
                        </button>
                        <%}%>
                        <input type="hidden" value="<%= info._id %>" id="iddd_group">
                    </div>
                    <div class="cover-info">
                        <div class="name" style="left: 10px;"><a ><%= info.name %></a></div>
                        <ul class="cover-nav" style="left: 0px;">
                            <li class="active"><a href="/group/<%= info._id %>"><i class="fa fa-fw fa-bars"></i>
                                    Timeline</a></li>
                            <li><a href="/member-group/<%= info._id %>"><i class="fa fa-fw fa-user"></i>Member</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--============= timeline posts-->
    <div class="col-md-8 col-md-offset-2">
        <div class="row">
            <!-- left posts-->
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <!-- post state form -->
                        <div class="box profile-info n-border-top">
                            <form action="/add-status/group/<%= info._id %>" method="POST" enctype="multipart/form-data">
                                    <textarea class="form-control input-lg p-text-area" rows="2"
                                              placeholder="Whats in your mind today?" name="content_status" required></textarea>
                                <ul id="results_upload" class="list-inline"></ul>
                                <div class="box-footer box-form">
                                    <button type="submit" class="btn btn-warning pull-right">Post</button>
                                    <ul class="nav nav-pills">
                                        <li><a style="cursor: pointer" onclick="document.getElementById('addImageStatus').click();"><i
                                                        class="fa fa-camera"></i></a></li>
                                        <input type="file" style="display: none" id="addImageStatus" name="addImageStatus">
                                    </ul>
                                </div>
                            </form>
                        </div>

                        <% if(timeline.length>0){ for(var i=0;i<timeline.length; i++){  %>
                        <!--   posts -->
                        <div class="box box-widget">
                            <div class="box-header with-border">
                                <div class="user-block">
                                    <img class="img-circle" src="<%= timeline[i].user.image %>" alt="User Image">
                                    <span class="username"><a href="/profile/<%= timeline[i].userId %>"><%= timeline[i].user.name %></a></span>
                                    <span class="description"><%= timeline[i].date.toLocaleTimeString()+' '+ timeline[i].date.getDate() +'-'+ timeline[i].date.getMonth() +'-'+ timeline[i].date.getFullYear()  %></span>
                                </div>
                            </div>

                            <div class="box-body" style="display: block;">
                                <p><%= timeline[i].content %>
                                </p>
                                <% if(typeof timeline[i].image != 'undefined' && timeline[i].image.length > 0){ for(var k=0; k<timeline[i].image.length; k++){%>
                                <img src="/../uploads/status/<%= timeline[i].image[k] %>" style="width: 100%; height: 300px;" class="img-responsive show-in-modal" alt="photo">
                                <div class="col-sm-12" style="padding-top: 10px;"></div>
                                <%}}%>

                                <% if(timeline[i].like.indexOf(user._id.toString()) === -1){ %>
                                <button type="button" class="btn btn-success btn-xs like-UnlikeGroup" data-id="<%= timeline[i]._id %>" action="like" ><i class="fa fa-thumbs-o-up">Like</i>
                                </button>
                                <% }else { %>
                                <button type="button" class="btn btn-success btn-xs like-UnlikeGroup" data-id="<%= timeline[i]._id %>" action="unlike" ><i class="fa fa-thumbs-o-down">UnLike</i>
                                </button>
                                <% } %>

                                <span class="pull-right text-muted"><span class="count-like"><%= timeline[i].like.length %></span>
                            likes - <span class="count-comment"><%= timeline[i].comment.length %></span> comments</span>

                            </div>
                            <div class="box-footer box-comments" style="display: block;">
                                <% if( timeline[i].comment.length>0){ for(var k=0 ; k< timeline[i].comment.length ; k++){%>
                                <div class="box-comment">
                                    <a href="/profile/<%= timeline[i].comment[k].id %>">
                                        <img class="img-circle img-sm" src="<%= timeline[i].comment[k].image %>"
                                             alt="User Image">
                                        <div class="comment-text">
                          <span class="username">
                          <%= timeline[i].comment[k].name %>
                              <span class="text-muted pull-right"><%= timeline[i].comment[k].date.toLocaleTimeString()+' '+ timeline[i].comment[k].date.getDate() +'-'+ timeline[i].comment[k].date.getMonth() +'-'+ timeline[i].comment[k].date.getFullYear()  %></span>
                          </span>
                                    </a>
                                    <%= timeline[i].comment[k].content %>
                                </div>
                            </div>
                            <% }}%>
                        </div>
                        <div class="box-footer" style="display: block;">
                            <form action="/post-comment/<%= timeline[i]._id %>" method="post">
                                <img class="img-responsive img-circle img-sm"
                                     src="<%= user.local.image %>" alt="Alt Text">
                                <div class="img-push">
                                    <input type="text" name="content_comment" class="form-control input-sm"
                                           placeholder="Press enter to post comment" required>
                                </div>
                            </form>
                        </div>
                    </div><!--  end posts-->
                    <%}} %>


                </div>
            </div>
        </div><!-- end left posts-->
    </div>
</div><!-- end timeline posts-->
</div>

<% include partical/footer.ejs %>
